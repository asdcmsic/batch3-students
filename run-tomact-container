sudo docker run \
  --name tomcat \
  -it \
  -p 8080:8080 \
  -v ./tomcat-users.xml:/usr/local/tomcat/conf/tomcat-users.xml \
  -v ./context.xml:/tmp/context.xml \
  tomcat:9.0 \
  /bin/bash -c "mv /usr/local/tomcat/webapps /usr/local/tomcat/webapps2; mv /usr/local/tomcat/webapps.dist /usr/local/tomcat/webapps; cp ./context.xml /usr/local/tomcat/webapps/manager/META-INF/context.xml; catalina.sh run"


